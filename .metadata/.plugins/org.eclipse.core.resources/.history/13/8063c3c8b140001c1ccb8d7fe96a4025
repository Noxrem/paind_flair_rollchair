#include "blinky_wait.h"
#include "McuWait.h"
#include "pin_mux.h"
#include "MK22F51212.h"
#include "fsl_gpio.h"




void Blinky_Wait_Init(void)
{
	McuWait_Init();	// init the blinky
}


void Blinky_Wait_Deinit(void)
{
	McuWait_Deinit();
}

void Blinky_Wait_Run(void)
{
	while(1)
	{
		GPIO_PortClear(BOARD_INITPINS_LED_BLUE_GPIO, BOARD_INITPINS_LED_BLUE_GPIO_PIN_MASK);
		McuWait_Waitms(1000);	// wait for 1 s
		GPIO_PortSet(BOARD_INITPINS_LED_BLUE_GPIO, BOARD_INITPINS_LED_BLUE_GPIO_PIN_MASK);
		McuWait_Waitms(200);	// wait for 200 ms
	}
}

